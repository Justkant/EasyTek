<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDayDateNb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="22dp"
        android:padding="0dp"
        android:text="04"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="false"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tvDayDateDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvDayDateNb"
        android:layout_alignRight="@+id/tvDayDateNb"
        android:layout_below="@+id/tvDayDateNb"
        android:padding="0dp"
        android:text="Dim"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cal_item_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

</RelativeLayout>